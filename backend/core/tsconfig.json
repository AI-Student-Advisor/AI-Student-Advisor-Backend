{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "public", "**/*.spec.ts"]
}
