{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["core/**/*", "App.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
